<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

    <definition name=".pagesLoginLayout"            template="/WEB-INF/views/attr/template-login.jsp">
        <put-attribute name="body" 	                    value=""/>
    </definition>

    <definition name=".tabsPageLayout"         	    template="/WEB-INF/views/attr/template-tabs.jsp">
        <put-attribute name="header" 	        		value="/WEB-INF/views/attr/tabs/header.jsp"/>
        <put-attribute name="body-default-script" 		value="/WEB-INF/views/attr/tabs/body-script.jsp"/>
        <put-attribute name="body-top" 	        		value="/WEB-INF/views/attr/tabs/body-top.jsp"/>
        <put-attribute name="body-menu" 	    		value="/WEB-INF/views/attr/tabs/body-menu.jsp"/>
        <put-attribute name="bottom"	 	   			value="/WEB-INF/views/attr/tabs/bottom.jsp"/>
    </definition>

    <definition name=".pagesPopLayout"         	    template="/WEB-INF/views/attr/template-pop.jsp">
        <put-attribute name="body" 	            		value=""/>
    </definition>

    <definition name=".pagesBoardLayout"            template="/WEB-INF/views/attr/template-pop.jsp">
        <put-attribute name="body" 	            		value=""/>
    </definition>

    <!--    tiles config    -->

    <definition name="login/*.tiles"           	    extends=".pagesLoginLayout">
        <put-attribute name="body"              	    value="/WEB-INF/views/login/{1}.jsp" />
    </definition>

    <definition name="tab/tabs.tiles"           	extends=".tabsPageLayout">
    </definition>

    <definition name="pop/*.tiles"           	    extends=".pagesPopLayout">
        <put-attribute name="body"              	    value="/WEB-INF/views/pop/{1}.jsp" />
    </definition>

    <definition name="board/*.tiles"           	    extends=".pagesBoardLayout">
        <put-attribute name="body"              	    value="/WEB-INF/views/board/{1}.jsp" />
    </definition>


